            }
          }
        },
        "reviewText": {
          validators: {
            notEmpty: {
              message: 'The review is required and cannot be empty'
            }
          }
        },
      }
    });

    $('#submitBtn').click(function() {
      $('#beerInfo').bootstrapValidator('validate');
